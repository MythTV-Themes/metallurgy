        </textarea>

        <textarea name="favoritelabel" from="systemlabel">
            <position>96,615</position>
            <value>Favorite:</value>
        </textarea>

        <statetype name="favorite">
            <state name="no">
                <textarea name="favorite" from="basetextarea">
                    <area>236,615,580,35</area>
                    <value>No</value>
                </textarea>
            </state>
            <state name="yes" from="no">
                <textarea name="favorite">
                    <value>Yes</value>
                </textarea>
            </state>
        </statetype>

        <imagetype name="coverart">
            <area>610,500,180,150</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <imagetype name="video_background">
            <position>927,460</position>
            <filename>backgrounds/livevid_background.png</filename>
        </imagetype>

        <imagetype name="screenshot">
            <area>880,500,300,196</area>
