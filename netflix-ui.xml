<mythuitheme>

    <window name="browse">

        <textarea name="heading" from="baseheading">
            <value>NetFlix Browser</value>
        </textarea>

        <imagetype name="background" from="basebackground1" />

        <buttonlist name="siteslist" from="basebuttonlist">
            <area>75,84,435,300</area>
            <showarrow>yes</showarrow>
        </buttonlist>

        <buttonlist name="articleslist" from="basebuttonlist">
            <area>520,84,680,300</area>
        </buttonlist>

        <imagetype name="coverart_background">
            <filename>video/small_coverart_background.png</filename>
            <position>85,441</position>
        </imagetype>

        <imagetype name="boxshot">
            <position>90,447</position>
            <staticsize>122,181</staticsize>
        </imagetype>

        <textarea name="title">
            <area>250,440,950,40</area>
            <font>extralargebold</font>
        </textarea>

        <textarea name="status">
            <area>250,473,950,35</area>
            <font>mediumgrey</font>
        </textarea>

        <textarea name="description">
            <area>250,505,950,135</area>
            <font>medium</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
        </textarea>

    </window>

    <window name="queue">

        <textarea name="heading" from="baseheading">
            <value>NetFlix Queue</value>
        </textarea>

        <imagetype name="background" from="basebackground1" />

        <buttonlist name="articleslist" from="basebuttonlist">
            <area>65,90,1140,300</area>
        </buttonlist>

        <imagetype name="coverart_background">
            <filename>video/small_coverart_background.png</filename>
            <position>85,441</position>
        </imagetype>

        <imagetype name="boxshot">
            <position>90,447</position>
            <staticsize>122,181</staticsize>
        </imagetype>

        <textarea name="title">
            <area>225,433,975,40</area>
            <font>extralargebold</font>
        </textarea>

        <textarea name="status">
            <area>225,473,1000,35</area>
            <font>mediumgrey</font>
        </textarea>

        <textarea name="description">
            <area>225,505,975,135</area>
            <font>medium</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
        </textarea>

    </window>

    <window name="config">

        <textarea name="heading" from="baseheading">
            <value>MythFlix Configuration</value>
        </textarea>

        <imagetype name="background" from="basebackground0" />

        <buttonlist name="category" from="basebuttonlist">
            <area>100,90,435,500</area>
        </buttonlist>

        <buttonlist name="sites" from="basebuttonlist">
            <area>550,90,630,500</area>
        </buttonlist>

        <textarea name="context_switch">
            <area>100,600,1080,50</area>
            <font>small</font>
            <multiline>yes</multiline>
            base
        </textarea>

        <imagetype name="background">
            <filename>backgrounds/popup_background.png</filename>
            <position>515,220</position>
        </imagetype>

        <textarea name="help">
            <area>540,240,400,110</area>
            <multiline>yes</multiline>
            <font>small</font>
        </textarea>

    </window>

</mythuitheme>
