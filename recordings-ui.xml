        <statetype name="videoprops">
            <position>1145,415</position>
            <state name="default">
                <imagetype name="blank">
                    <filename>type/blank.png</filename>
                </imagetype>
            </state>
            <state name="hdtv">
                <imagetype name="hdtv">
                    <filename>type/hd.png</filename>
                </imagetype>
            </state>
            <state name="widescreen">
