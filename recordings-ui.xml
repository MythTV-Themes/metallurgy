<mythuitheme>

    <window name="watchrecordings">

        <textarea name="heading" from="baseheading">
            <value>Watch Recordings</value>
        </textarea>
        <!--        <progressbar name="usedbar" from="baseprogressbar">
            <position>100,10</position>
        </progressbar>-->

        <imagetype name="background" from="basebackground2" />

        <buttonlist name="recgroups">
            <arrange>stack</arrange>
            <area>60,360,1150,38</area>
            <align>center</align>
            <spacing>20</spacing>
            <scrollstyle>center</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <layout>horizontal</layout>
            <buttonarea>0,0,100%,100%</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,300,30</area>
                    <shape name="recActiveGroupShape">
                        <area>0, 0, 100%, 100%</area>
                        <minsize>150,100%</minsize>
                        <type>roundbox</type>
                        <fill color="#FFFFFF" alpha="16" />
                        <line color="#000000" alpha="255" width="1" />
                        <cornerradius>15</cornerradius>
                    </shape>
                    <textarea name="buttontext">
                        <area>3%,0,96%,100%</area>
                        <minsize>10%,100%</minsize>
                        <align>allcenter</align>
                        <cutdown>yes</cutdown>
                        <font>smallblack</font>
                        <alpha>255</alpha>
                    </textarea>
                </state>
                <state name="selected">
                    <area>0,0,300,30</area>
                    <shape name="recSelectedGroupShape">
                        <area>0, 0, 100%, 100%</area>
                        <minsize>150,100%</minsize>
                        <type>roundbox</type>
                        <fill color="#000000" alpha="92" />
                        <line color="#FFFFFF" alpha="255" width="1" />
                        <cornerradius>15</cornerradius>
                    </shape>
                    <textarea name="buttontext">
                        <area>3%,0,96%,95%</area>
                        <minsize>10%,100%</minsize>
                        <align>allcenter</align>
                        <font>basesmall</font>
                        <alpha>255</alpha>
                    </textarea>
                </state>
                <state name="inactive" from="selected" />
            </statetype>
            <statetype name="upscrollarrow">
                <position>132,247</position>
            </statetype>
            <statetype name="downscrollarrow">
                <position>160,247</position>
            </statetype>
        </buttonlist>

        <buttonlist name="groups" from="basebuttonlist">
            <area>55,75,285,285</area>
            <scrollstyle>center</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <spacing>10</spacing>
            <statetype name="buttonitem">
                <state name="active">
                    <textarea name="buttontext">
                        <case>capitaliseall</case>
                    </textarea>
                </state>
                <state name="inactive" from="active" />
                <state name="selected" from="active" />
            </statetype>
        </buttonlist>
        
        <buttonlist name="recordings" from="basebuttonlist">
            <area>397,75,825,285</area>
            <spacing>10</spacing>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,825,30</area>
                    <textarea name="titlesubtitle" from="buttontext">
                        <area>30,2,590,25</area>
                    </textarea>
                    <textarea name="shortdate" from="titlesubtitle">
                        <area>610,2,120,25</area>
                        <align>right</align>
                    </textarea>
                    <textarea name="starttime" from="shortdate">
                        <area>730,2,95,25</area>
                        <align>hcenter</align>
                    </textarea>
                </state>
                <state name="inactive" from="active" />
                <state name="selected" from="active" />
            </statetype>
            <statetype name="upscrollarrow">
                <position>430,0</position>
            </statetype>
            <statetype name="downscrollarrow">
                <position>430,275</position>
            </statetype>
        </buttonlist>

