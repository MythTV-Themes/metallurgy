        </statetype>

        <textarea name="title">
            <area>85,404,800,35</area>
            <font>extralargebold</font>
        </textarea>

        <textarea name="subtitle">
            <area>85,439,800,30</area>
            <font>mediumbold</font>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="channel">
            <area>665,474,250,30</area>
