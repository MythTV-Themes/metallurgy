<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mythuitheme SYSTEM "http://miffteevee.co.uk/mythuitheme.dtd">
<mythuitheme>

    <window name="news">

        <textarea name="heading" from="baseheading">
            <value>RSS Feeds</value>
        </textarea>

        <imagetype name="background" from="basebackground1" />

        <buttonlist name="siteslist" from="basebuttonlist">
            <area>75,84,435,290</area>
            <showarrow>yes</showarrow>
        </buttonlist>

        <buttonlist name="articleslist" from="basebuttonlist">
            <area>520,84,680,290</area>
        </buttonlist>

        <textarea name="title">
            <area>75,442,975,40</area>
            <font>extralargebold</font>
        </textarea>

        <textarea name="updated">
            <area>75,480,975,30</area>
            <font>mediumgrey</font>
        </textarea>

        <textarea name="description">
            <area>75,514,1130,115</area>
            <font>medium</font>
            <multiline>yes</multiline>
        </textarea>

        <!-- Thumbnail is pointless <imagetype name="thumbnail">
            <position>660,75</position>
            <staticsize>120,90</staticsize>
        </imagetype> -->

        <imagetype name="pocastbackground">
            <filename>type/blank.png</filename>
            <position>1065,442</position>
        </imagetype>

        <imagetype name="ispodcast">
            <filename>podcast.png</filename>
            <position>1065,442</position>
        </imagetype>

        <imagetype name="downloadbackground">
            <filename>type/blank.png</filename>
            <position>1110,442</position>
        </imagetype>

        <imagetype name="download">
            <filename>news/download.png</filename>
            <position>1110,442</position>
        </imagetype>

        <imagetype name="enclosurebackground">
            <filename>type/blank.png</filename>
            <position>1155,442</position>
        </imagetype>

        <imagetype name="enclosures">
            <filename>news/embedmedia.png</filename>
            <position>1155,442</position>
        </imagetype>

    </window>

    <window name="newsconfig">

        <textarea name="heading" from="baseheading">
            <value>MythNews Configuration</value>
        </textarea>

        <imagetype name="background" from="basebackground0" />

        <buttonlist name="category" from="basebuttonlist">
            <area>100,90,435,500</area>
        </buttonlist>

        <buttonlist name="sites" from="basebuttonlist">
            <area>550,90,630,500</area>
        </buttonlist>

    </window>

    <window name="config-freq">
        <area>415,220,450,258</area>

        <imagetype name="background">
            <filename>backgrounds/popup_background.png</filename>
            <position>0,0</position>
        </imagetype>

        <textarea name="help">
            <area>25,20,400,110</area>
            <font>small</font>
            <multiline>yes</multiline>
        </textarea>

        <spinbox name="spinbox_holder" from="basespinbox">
            <area>120,140,70,30</area>
        </spinbox>

        <textarea name="minutes">
            <area>200,140,100,30</area>
            <font>mediumgrey</font>
            <value>Minutes</value>
        </textarea>

        <textarea name="context_switch">
            <area>25,190,400,50</area>
            <font>small</font>
            <multiline>yes</multiline>
            <align>hcenter,top</align>
        </textarea>
    </window>

</mythuitheme>
